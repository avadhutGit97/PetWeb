@model IEnumerable<PetWeb.Models.Pet>
@using PetWeb.Models
@{
    ViewData["Title"] = "Find a Pet";
    var location = ViewBag.Location as string;
    PetType? type = ViewBag.Type as PetType?;
}
<h1>Adopt a Pet</h1>
<form asp-action="Search" method="post" class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Location</label>
        <input name="location" class="form-control" value="@location" placeholder="City or area" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Pet Type</label>
        <select name="type" class="form-select">
            <option value="">Any</option>
            <option value="@PetType.Dog">Dog</option>
            <option value="@PetType.Cat">Cat</option>
            <option value="@PetType.Rabbit">Rabbit</option>
            <option value="@PetType.Horse">Horse</option>
            <option value="@PetType.Other">Other</option>
        </select>
    </div>
    <div class="col-md-2 align-self-end">
        <button class="btn btn-primary w-100" type="submit">Search</button>
    </div>
</form>
@if (Model != null && Model.Any())
{
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Breed</th>
                <th>Age</th>
                <th>Location</th>
                <th>Owner</th>
                <th>Owner Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Type</td>
                <td>@p.Breed</td>
                <td>@(p.AgeYears.HasValue ? p.AgeYears + "y" : "-")</td>
                <td>@p.Location</td>
                <td>@p.OwnerName</td>
                <td>@p.OwnerEmail</td>
                <td>
                    <a class="btn btn-sm btn-success" href="@Url.Action("Create", "Adoptions", new { id = p.Id })">Adopt</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}