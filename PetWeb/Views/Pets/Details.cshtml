@model PetWeb.Models.Pet
@{
    ViewData["Title"] = "Pet Details";
}
<h1>@Model.Name</h1>
<dl class="row">
    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.Type</dd>

    <dt class="col-sm-2">Breed</dt>
    <dd class="col-sm-10">@Model.Breed</dd>

    <dt class="col-sm-2">Age</dt>
    <dd class="col-sm-10">@(Model.AgeYears.HasValue ? Model.AgeYears + "y" : "-")</dd>

    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location</dd>

    <dt class="col-sm-2">Owner</dt>
    <dd class="col-sm-10">@Model.OwnerName</dd>

    <dt class="col-sm-2">Owner Email</dt>
    <dd class="col-sm-10">@Model.OwnerEmail</dd>
</dl>
@if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
{
    <div>
        <img src="@Model.ImageUrl" style="max-height:300px" />
    </div>
}
<p>
    <a class="btn btn-success" href="@Url.Action("Create", "Adoptions", new { id = Model.Id })">Adopt</a>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Back</a>
    <a class="btn btn-primary" href="@Url.Action("Edit", new { id = Model.Id })">Edit</a>
</p>