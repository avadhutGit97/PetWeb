@model IEnumerable<PetWeb.Models.Pet>
@{
    ViewData["Title"] = "Pets";
}
<h1>Pets</h1>
<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Breed</th>
            <th>Age</th>
            <th>Location</th>
            <th>Owner</th>
            <th>Owner Email</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Type</td>
            <td>@item.Breed</td>
            <td>@(item.AgeYears.HasValue ? item.AgeYears + "y" : "-")</td>
            <td>@item.Location</td>
            <td>@item.OwnerName</td>
            <td>@item.OwnerEmail</td>
            <td>
                @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" style="max-height:60px" />
                }
            </td>
            <td>
                <a class="btn btn-sm btn-secondary" href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
                <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = item.Id })">Details</a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>