@model PetWeb.Models.Pet
@{
    ViewData["Title"] = "Delete Pet";
}
<h1>Delete Pet</h1>
<div class="alert alert-warning">Are you sure you want to delete this pet?</div>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Breed</dt>
    <dd class="col-sm-10">@Model.Breed</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
</form>